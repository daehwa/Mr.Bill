<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#90000000">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:text="돈 낸 사람"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_person_name"
                android:hint="추가할 사람 입력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="textShortMessage"
                android:textColorHint="#c4e3eb"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPrimary"
                android:onClick="addPopPersonBtn"
                android:background="@android:color/transparent"
                android:text="추가"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fillViewport="true">
            <RadioGroup
                android:id="@+id/cost_person_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
            </RadioGroup>
        </ScrollView>
        <ScrollView
            android:id="@+id/sv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/participants_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/num_people_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="총: " />
            <TextView
                android:id="@+id/num_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text=" 명" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:backgroundTint="#fac20c"
                android:onClick="okBtn"
                android:background="@android:color/transparent"
                android:text="확인"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="deletePopPersonBtn"
                android:background="@android:color/transparent"
                android:text="삭제"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:onClick="cancelBtn"
                android:background="@android:color/transparent"
                android:text="취소"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>